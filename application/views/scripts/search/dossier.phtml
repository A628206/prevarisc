<h1 class="page-header">Recherche</h1>

<h2>Dossiers</h2>

<form method='get'>

	<div class='well well-small'>

		<div class="input-group col-xs-6">
			<input type="text" name='objet' class="form-control search-query" placeholder="Objet du dossier ..." value='<?php if(isset($_GET["objet"])) echo $_GET["objet"] ?>' />
